@model EsraDurgunFinalProject.Data.Model.Dress
@{
    ViewData["Title"] = "AddDress";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Dress</h1>
<br />
@using (Html.BeginForm("AddDress", "Dress", FormMethod.Post))
{
    @Html.Label("Dress Name")
    @Html.TextBoxFor(x => x.DressName, new { @class = "form-control" })
    <br />
    @Html.Label("Dress Description")
    @Html.TextAreaFor(x => x.DressDes, new { @class = "form-control" })

    <br />
    @Html.Label("Dress Category")
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v1, new { @class = "form-control" })

    <br />
    @Html.Label("Price")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })

    <br />
    @Html.Label("Image")
    @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })

    <br />
    @Html.Label("Stock")
    @Html.TextBoxFor(x => x.Stocak, new { @class = "form-control" })

    <br />
    <button class="btn btn-info">Save</button>

}
